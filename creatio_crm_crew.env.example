# Creatio CRM Backend Analysis Crew - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# LLM Configuration
# =============================================================================

# OpenAI API Key (required for CrewAI agents)
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI Model (default: gpt-4o)
OPENAI_MODEL=gpt-4o

# Temperature for LLM responses (default: 0.7)
TEMPERATURE=0.7

# Alternative: Anthropic API (optional)
ANTHROPIC_API_KEY=

# =============================================================================
# Creatio CRM Connection (for future live data features)
# =============================================================================

# Creatio Instance URL
CREATIO_URL=https://your-instance.creatio.com

# Creatio Authentication
CREATIO_USERNAME=your-username
CREATIO_PASSWORD=your-password

# Or use OAuth token
CREATIO_OAUTH_TOKEN=

# =============================================================================
# Database Connection (for direct database access, if available)
# =============================================================================

# Database connection (typically PostgreSQL or MSSQL)
CREATIO_DB_HOST=localhost
CREATIO_DB_PORT=5432
CREATIO_DB_NAME=your_creatio_database
CREATIO_DB_USER=db_user
CREATIO_DB_PASSWORD=db_password

# =============================================================================
# Application Settings
# =============================================================================

# Enable verbose output (default: True)
VERBOSE=True

# Maximum requests per minute (default: 10)
MAX_RPM=10

# Schema cache TTL in seconds (default: 3600)
SCHEMA_CACHE_TTL=3600

# Output directory for generated files
OUTPUT_DIR=./creatio_analysis_output

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
